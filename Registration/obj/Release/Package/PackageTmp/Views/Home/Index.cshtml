@section Scripts {
    <script>
        //obsługa checkboxów - jeden zaznaczony, drugi nie
        $('input').on('change', function () {
            var id = $(this).prop('id');
            if (id == 'Agree1Yes' || id == 'Agree1No') {
                // Make sure the two have opposite values:
                var other = id == 'Agree1Yes' ? 'Agree1No' : 'Agree1Yes';
                $('#' + other).prop("checked", !$(this).prop("checked"));
            }
        });

        $('input').on('change', function () {
            var id = $(this).prop('id');
            if (id == 'Agree2Yes' || id == 'Agree2No') {
                // Make sure the two have opposite values:
                var other = id == 'Agree2Yes' ? 'Agree2No' : 'Agree2Yes';
                $('#' + other).prop("checked", !$(this).prop("checked"));
            }
        });




        /* wylaczenie scroll smoothing na IE, zeby nie skakalo*/
       if (navigator.userAgent.match(/Trident\/7\./)) { // if IE
            $('body').on("mousewheel", function () {
                // remove default behavior
                event.preventDefault();

            //scroll without smoothing
                var wheelDelta = event.wheelDelta;
                var currentScrollPosition = window.pageYOffset;
                window.scrollTo(0, currentScrollPosition - wheelDelta);
            });
        }



     $(document).ready(function () {
           /*Obsluga wysylania formularza*/
           $("#sbform").on('submit', '#sendform', function (event) {
               event.preventDefault();

               if (window.FormData === 'undefined') {
                   alert("Przeglądarka nie wspiera obsługi formdata...");
               }
               else
               {
                   $("#sendbutton").hide();
                   $("#sendingindicator").show();

                   var fdata = new FormData(); //wymagane m.in. do obslugi wysylania plikow ajaxem

                   //post danych z inputów
                   $("input[type='text']").each(function (x, y) {
                       fdata.append($(y).attr("name"), $(y).val());
                   });

                   //post danych z checkboxów
                   $("input:checked").each(function (x, y) {
                       fdata.append($(y).attr("name"), $(y).val());

                   });

                   //post danych z textarea
                   $("textarea").each(function (x, y) {
                       fdata.append($(y).attr("name"), $(y).val());
                   });

                   //post danych z selectów
                   $("select").each(function (x, y) {
                       fdata.append($(y).attr("name"), $(y).val());
                   });


                   $.ajax({
                       url: '@Url.Action("SendForm", "Home")',
                       type: "POST",
                       contentType: false, // Not to set any content header
                       processData: false, // Not to process data
                       data: fdata,


                       success: function (result) {
                           $("#sbform").html(result);
                           @*window.location.href = '@Url.Action("ThankYou","Home")';*@
                       },
                       error: function (err) {
                           alert("Wystąpił błąd.");
                           $("#sendingindicator").hide();
                           $("#sendbutton").show();
                       }
                   });
               }
           });
       });



        // Set the date we're counting down to
        var countDownDate = new Date("Jul 28, 2021 23:59:59").getTime();
        // Update the count down every 1 second
        var x = setInterval(function () {
            // Get todays date and time
            var now = new Date().getTime();
            // Find the distance between now an the count down date
            var distance = countDownDate - now;
            // Time calculations for days, hours, minutes and seconds
            var days = Math.floor(distance / (1000 * 60 * 60 * 24));
            var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((distance % (1000 * 60)) / 1000);
            // Display the result in the element with id="demo"
            document.getElementById("demo").innerHTML = "Do końca rejestracji pozostało: " + days + "d " + hours + "g "
                + minutes + "m " + seconds + "s ";

            // If the count down is finished, write some text
            if (distance < 0) {
                clearInterval(x);
                document.getElementById("demo").innerHTML = "EXPIRED";
            }
        }, 1000);

    </script>
}
