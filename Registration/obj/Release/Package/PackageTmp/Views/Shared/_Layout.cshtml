<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/content/images/favicon.png">
    <title>Rejestracja</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body data-spy="scroll" data-target="#site-nav">
    <nav id="site-nav" class="navbar navbar-fixed-top navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <!-- logo -->
                <div class="site-branding">
                    <a href="https://www.ricoh.pl/index.html" target="_blank">
                        <img src="~/Content/images/ricoh_logo_white.png" alt="Logo" style="max-height:40px;">
                    </a>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="social-block">
                        <li><a href="https://www.facebook.com/RicohPolska/?fref=ts" target="_blank"><i class="ion-social-facebook-outline"></i></a></li>
                        <li><a href="https://www.linkedin.com/company/ricoh-poland" target="_blank"><i class="ion-social-linkedin-outline"></i></a></li>
                        <li><a href="https://www.instagram.com/ricohpoland/" target="_blank"><i class="ion-social-instagram-outline"></i></a></li>
                        <li><a href="http://www.youtube.com/user/ricohpolska" target="_blank"><i class="ion-social-youtube-outline"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span><a href="https://www.ricoh.pl/privacy-policy.html" target="_blank">Polityka prywatności</a> | <a href="https://www.ricoh.pl/cookie-policy.html" target="_blank">Zasady dotyczące plików cookie</a> | <a href="https://www.ricoh.pl/terms-of-use.html" target="_blank">Warunki korzystania z witryny</a></span>
                </div>
            </div>
        </div>

    </footer>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
